?expr : sum

?sum : atom
    | sum "+" atom -> add
    | sum "-" atom -> sub


?atom : SQ_STR -> lit_str
      | SIGNED_INT -> lit_int
      | col_name
      | /true/i -> true
      | /false/i -> false
      | /null/i -> null

# CNAME is pretty broad, so needs to be low
col_name : CNAME | DQ_STR

%import common.CNAME
%import common.ESCAPED_STRING -> DQ_STR
%import common._STRING_ESC_INNER
%import common.SIGNED_INT

SQ_STR : "'" _STRING_ESC_INNER "'"

%import common.WS
%ignore WS